  "scripts": {
    "kill:port": "kill -s TERM $(lsof -t -i:8080 -sTCP:LISTEN) || true",
    "pretest": "node ../../../scripts/update-se-drivers.js",
    "wait:server": "BROWSER=none yarn workspace @okta/test.app.test-harness-app start & ./node_modules/.bin/wait-on http://localhost:8080",
    "test": "yarn wait:server && yarn protractor",
    "test2": "yarn wait:server && yarn wdio",
    "posttest": "yarn kill:port",
    "protractor": "protractor protractor.conf.js",
    "wdio": "wdio run wdio.conf.js"
